<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment"
    android:background="@color/bg2Dark">

    <TextView
        android:id="@+id/profile"
        android:layout_width="71dp"
        android:layout_height="59dp"
        android:text="@string/profile"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/spinner"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-1dp"


        />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/yellow"
        android:backgroundTint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.669"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="58dp"

        tools:layout_editor_absoluteY="44dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:id="@+id/numPickerMin"
        app:layout_constraintBottom_toTopOf="@+id/btnRoundTime"
        app:layout_constraintStart_toStartOf="parent"

        />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:id="@+id/numPickerSec"
        app:layout_constraintBottom_toTopOf="@+id/btnRoundTime"
        app:layout_constraintStart_toEndOf="@+id/numPickerMin"

        />

    <TextView
        android:id="@+id/btnRoundTime"
        android:layout_width="137dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:text="@string/roundTime"
        android:textSize="14sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnRoundTime1"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/btnRoundTime1"
        android:layout_width="243dp"
        android:layout_height="55dp"
        android:ems="10"
        android:hint="@string/roundTime"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.579" />

    <EditText
        android:id="@+id/btnRestTime"
        android:layout_width="243dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="@string/restTime"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.667" />

    <EditText
        android:id="@+id/btnRoundAmount"
        android:layout_width="243dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="@string/roundAmount"
        android:inputType="number"
        android:maxLength="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />

    <EditText
        android:id="@+id/btnProfileName"
        android:layout_width="243dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="@string/profileName"
        android:inputType="text"
        android:maxLength="15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849" />

    <Button
        android:id="@+id/create"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:text="@string/create"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915" />

    <Button
        android:id="@+id/delete"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:text="@string/delete"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.978" />


</androidx.constraintlayout.widget.ConstraintLayout>